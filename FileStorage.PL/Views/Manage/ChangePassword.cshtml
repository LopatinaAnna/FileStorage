@model FileStorage.PL.Models.ChangePasswordModel
@{
    ViewBag.Title = "Change password";
}
<div class="action-panel">
    <div class="page-title">Change password</div>
</div>
@using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
@Html.AntiForgeryToken()
<div class="warning-message">@ViewBag.Message</div>
<br />
<div class="form-group">
    @Html.LabelFor(m => m.OldPassword, new { @class = "control-label" })
    <div class="text-box-val">
        <div>@Html.PasswordFor(m => m.OldPassword, new { @class = "form-control", @maxlength = "30", @minlength = "6", @required = true })</div>
        <div class="text-danger"> @Html.ValidationMessageFor(m => m.OldPassword, "")</div>
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.NewPassword, new { @class = "control-label" })
    <div class="text-box-val">
        <div>@Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", @maxlength = "30", @minlength = "6", @required = true })</div>
        <div class="text-danger"> @Html.ValidationMessageFor(m => m.NewPassword, "")</div>
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
    <div class="text-box-val">
        <div>@Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @maxlength = "30", @minlength = "6", @required = true })</div>
        <div class="text-danger"> @Html.ValidationMessageFor(m => m.ConfirmPassword, "")</div>
    </div>
</div>

<div class="form-group">
    <input type="submit" value="Change password" class="btn-ch-pass" />
</div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}